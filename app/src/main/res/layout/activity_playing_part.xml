<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingPartActivity">

    <ImageView
        android:id="@+id/ball_screen_button"
        android:layout_width="80dp"
        android:layout_height="68dp"
        android:onClick="PlayBallScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/similar_pictures_button"
        android:layout_width="80dp"
        android:layout_height="68dp"
        android:onClick="PlaySimilarPictures"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />
    <ImageView
            android:id="@+id/similar_pictures_button2"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:onClick="PlaySeasons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.398"/>
</androidx.constraintlayout.widget.ConstraintLayout>