<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:id="@+id/btnChangeLanguage"
            android:layout_width="56dp"
            android:layout_height="68dp"
            android:src="@drawable/flags"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="-10dp"/>

    <ImageView
            android:id="@+id/island_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mainmenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/learning_button"
            android:onClick="OpenLearningPart"
            android:layout_width="152dp"
            android:layout_height="84dp"
            android:background="@drawable/button_states"
            android:fontFamily="@font/joystix"
            android:text="@string/learn_button_text"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:paddingTop="0dp"
            android:paddingBottom="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playing_button"
        android:onClick="OpenPlayingPart"
        android:layout_width="152dp"
        android:layout_height="84dp"
        android:background="@drawable/button_states"
        android:fontFamily="@font/joystix"
        android:text="@string/play_button_text"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingTop="0dp"
        android:paddingBottom="25dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp" android:layout_marginBottom="5dp"/>
    <ImageButton
            android:onClick="question_mark"
            android:background="@drawable/questionmarkbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_mark_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>