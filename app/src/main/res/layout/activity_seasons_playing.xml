<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:padding="16dp">

    <ImageView
            android:id="@+id/seasonImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/season_image"
            tools:src="@tools:sample/avatars" />

    <Button
            android:id="@+id/springButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/season_name_spring"
            android:layout_marginTop="20dp"/>

    <Button
            android:id="@+id/summerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/season_name_summer"
            android:layout_marginTop="20dp"/>

    <Button
            android:id="@+id/autumnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/season_name_autumn"
            android:layout_marginTop="20dp"/>

    <Button
            android:id="@+id/winterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/season_name_winter"
            android:layout_marginTop="20dp"/>

</LinearLayout>
