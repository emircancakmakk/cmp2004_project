<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:padding="16dp">


    <ImageView
            android:id="@+id/seasonImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/season_image"
            tools:src="@tools:sample/avatars" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.31"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout" app:layout_constraintTop_toBottomOf="@+id/seasonImageView">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/summerButton"
                android:onClick="OpenLearningPart"
                android:layout_width="152dp"
                android:layout_height="84dp"
                android:background="@drawable/button_states"
                android:fontFamily="@font/joystix"
                android:text="Summer"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="0dp"
                android:paddingBottom="25dp"
                android:layout_marginTop="72dp"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/springButton"
                android:onClick="OpenLearningPart"
                android:layout_width="152dp"
                android:layout_height="84dp"
                android:background="@drawable/button_states"
                android:fontFamily="@font/joystix"
                android:text="Spring"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="0dp"
                android:paddingBottom="25dp"
                android:layout_marginTop="72dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/autumnButton"
                android:onClick="OpenLearningPart"
                android:layout_width="152dp"
                android:layout_height="84dp"
                android:background="@drawable/button_states"
                android:fontFamily="@font/joystix"
                android:text="Autumn"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="0dp"
                android:paddingBottom="25dp"
        />
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/winterButton"
                android:onClick="OpenLearningPart"
                android:layout_width="152dp"
                android:layout_height="84dp"
                android:background="@drawable/button_states"
                android:fontFamily="@font/joystix"
                android:text="Winter"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="0dp"
                android:paddingBottom="25dp"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
