<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaysActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <Button
                android:id="@+id/button1"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button1_eng"
                android:textSize="20sp"
                android:onClick="PlayMonday" />

            <Button
                android:id="@+id/button2"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button2_eng"
                android:textSize="18sp"
                android:onClick="PlayTuesday" />

            <Button
                android:id="@+id/button3"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button3_eng"
                android:textSize="20sp"
                android:onClick="PlayWednesday" />

            <Button
                android:id="@+id/button4"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button4_eng"
                android:textSize="20sp"
                android:onClick="PlayThursday" />

            <Button
                android:id="@+id/button5"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button5_eng"
                android:textSize="24sp"
                android:onClick="PlayFriday" />

            <Button
                android:id="@+id/button6"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button6_eng"
                android:textSize="20sp"
                android:onClick="PlaySaturday" />

            <Button
                android:id="@+id/button7"
                android:layout_width="232dp"
                android:layout_height="88dp"
                android:fontFamily="@font/myfont"
                android:text="@string/d_button7_eng"
                android:textSize="20sp"
                android:onClick="PlaySunday" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>