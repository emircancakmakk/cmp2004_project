<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaysActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button1"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button2"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button3"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button4"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button5"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button6"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/meat_button_states"
                    android:fontFamily="@font/joystix"
                    android:text="@string/d_button7"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:paddingTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"/>
        </LinearLayout>
    </ScrollView>
    <ImageButton
            android:onClick="question_mark"
            android:background="@drawable/questionmarkbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_mark_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>